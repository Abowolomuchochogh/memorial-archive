rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    // Checks BOTH 'role' field AND 'isAdmin' boolean to handle data inconsistencies
    function isAdmin() {
      let userData = get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
      return request.auth != null && (
        userData.role == 'admin' || userData.isAdmin == true
      );
    }

    // MEMORIALS
    match /memorials/{memorialId} {
      // READ: 
      // 1. Public can read ONLY approved memorials (isApproved == true).
      // 2. Admins can read ALL memorials (including unapproved).
      // 3. Creators can read their OWN memorials (even if unapproved).
      allow read: if resource.data.isApproved == true 
                  || isAdmin() 
                  || (request.auth != null && resource.data.postedBy == request.auth.uid);
      
      // CREATE: 
      // Authenticated users can create. Regular users must set status = 'pending'.
      // Admins can create with any status (e.g. 'approved' for instant publishing).
      allow create: if request.auth != null 
                    && (request.resource.data.status == 'pending' || isAdmin());
      
      // UPDATE:
      // 1. Admins: Can update any field (including status).
      // 2. Creators: Can update content, but STRICTLY FORBIDDEN from changing 'status'.
      // 3. Public/Auth: Can strictly ONLY update 'candlesLit' (increment).
      allow update: if isAdmin() 
                    || (
                      request.auth != null 
                      && resource.data.postedBy == request.auth.uid 
                      && request.resource.data.status == resource.data.status // Status CANNOT change
                    )
                    || request.resource.data.diff(resource.data).affectedKeys().hasOnly(['candlesLit']);

      // DELETE: Admin only.
      allow delete: if isAdmin();
    }
    
    // CHATS
    // Strictly restricted to participants.
    match /chats/{chatId} {
      allow read: if request.auth != null && request.auth.uid in resource.data.participants;
      allow create: if request.auth != null 
                    && request.resource.data.participants.hasAll([request.auth.uid]); // Must be a participant
      allow update: if request.auth != null && request.auth.uid in resource.data.participants;
    }
    
    // MESSAGES
    // Strictly restricted to participants of the parent chat.
    match /chats/{chatId}/messages/{messageId} {
      allow read, write: if request.auth != null && 
        request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
    }
    
    // USERS
    // Profiles readable by auth users. Editable only by owner or admin.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if isAdmin() || (request.auth != null && request.auth.uid == userId);
    }
  }
}
